{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": {
    "public": "dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "hosting": {
      "enabled": true,
      "port": 5002
    },
    "firestore": {
      "enabled": true,
      "port": 8089
    },
    "ui": {
      "enabled": true,
      "port": 4222
    },
    "auth": {
      "enabled": true,
      "port": 4100
    },
    "database": {
      "enabled": true,
      "port": 5555
    }
  },
  "database": {
    "rules": "database.rules.json"
  },
  "functions": {
    "predeploy": ["npm --prefix \"$RESOURCE_DIR\" run lint", "npm --prefix \"$RESOURCE_DIR\" run build"]
  },
  "storage": {
    "rules": "storage.rules"
  }
}
